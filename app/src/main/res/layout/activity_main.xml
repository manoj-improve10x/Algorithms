<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/fizz_buzz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="FizzBuzz"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/divisible_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Divisible By Five"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/minutes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="minutes into seconds"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Discount"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/less_then_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Less Then Hundred"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/integer_range_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Integer Range"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/equality_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="EqualityThreeValues"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/three_programmers_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Three Programmers"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/find_sentence_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Find Sentence"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/even_number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="Even Number"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/two_makes_ten_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="MakesTwoTen"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/hours_into_seconds_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HoursIntoSeconds"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/word_count_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word Count"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/reverse_string_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ReverseOrder"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/shuffle_name_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ShuffleName"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>